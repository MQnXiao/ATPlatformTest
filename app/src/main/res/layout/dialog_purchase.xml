<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="交易名称:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:textSize="18sp"
        android:id="@+id/name_input_edit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/name_tv"
        app:layout_constraintBottom_toBottomOf="@id/name_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="18sp"
        android:id="@+id/quantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="数量:"
        app:layout_constraintStart_toStartOf="@id/name_tv"
        app:layout_constraintTop_toBottomOf="@id/name_tv" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/quantity_input_edit"
        android:layout_width="200dp"
        android:textSize="18sp"
        android:layout_height="40dp"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/quantity_tv"
        app:layout_constraintTop_toTopOf="@id/quantity_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="18sp"
        android:id="@+id/amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="金额:"
        app:layout_constraintStart_toStartOf="@id/name_tv"
        app:layout_constraintTop_toBottomOf="@id/quantity_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:textSize="18sp"
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/amount_tv"
        android:layout_marginBottom="20dp"
        android:text="买入"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>